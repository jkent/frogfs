menu "libespfs"

choice
	prompt "Log level"
	default ESPFS_LOG_LEVEL_WARNING

config ESPFS_LOG_LEVEL_NONE
	bool "None"

config ESPFS_LOG_LEVEL_ERROR
	bool "Error"

config ESPFS_LOG_LEVEL_WARNING
	bool "Error"

config ESPFS_LOG_LEVEL_INFO
	bool "Info"

config ESPFS_LOG_LEVEL_DEBUG
	bool "Debug"

config ESPFS_LOG_LEVEL_VERBOSE
	bool "Verbose"

endchoice # "Log level"

config ESPFS_MAX_PARTITIONS
	int "Maximum Number of Partitions"
	default 1
	range 1 10
	help
		Define maximum number of partitions that can be mounted.

config ESPFS_IMAGE_ROOT
	string "Directory within project to build from"
	default "espfs"

config ESPFS_USE_HEATSHRINK
	bool "Use heatshrink decompressor"
	default y

config ESPFS_EMBED_BINARY
	bool "Embed resulting espfs in firmware image"
	default y

endmenu
